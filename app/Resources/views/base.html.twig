<!DOCTYPE html>
<html class="no-js">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title>ArcticAsset {% if title is defined %}- {{title}}{% endif %}</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" type="text/css" media="screen" />
        <link rel="stylesheet" href="{{ asset('css/bootstrap-responsive.min.css') }}" type="text/css" media="screen" />
        <link rel="stylesheet" href="{{ asset('css/main.css') }}" type="text/css" media="screen" />
        {% endblock %}
        <style>
          body {
            padding-top: 60px;
            padding-bottom: 40px;
          }
        </style>

        <script src="{{ asset('js/vendor/modernizr-2.6.1-respond-1.1.0.min.js') }}" type="text/javascript"></script>
        <script type="text/javascript">
          var searchUrl = "{{ path('asset_search') }}"
        </script>

        <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
        <!--[if lt IE 9]>
          <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
    </head>
    <body>

        <div class="navbar navbar-inverse navbar-fixed-top">
          <div class="navbar-inner">
            <div class="container-fluid">
              <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </a>
              <a class="brand" href="{{ path('arctic_dashboard_dashboard_dashboard') }}">Arctic Asset</a>
              <div class="nav-collapse collapse">
                {% include "::user.html.twig" %}
                
                <ul class="nav">
                  <li {% if app.request.attributes.get('_route') == 'arctic_dashboard_dashboard_dashboard' %}class="active"{% endif %}>
                    <a href="{{ path('arctic_dashboard_dashboard_dashboard') }}">Dashboard</a>
                  </li>
                  <li {% if app.request.attributes.get('_route') == 'ticket' %}class="active"{% endif %}>
                    <a href="{{ path('ticket') }}">Tickets</a>
                  </li>
                  <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Assets <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                      <li><a href="{{ path('asset') }}" class="active">List</a></li>
                      <li class="divider"></li>
                      <li><a href="{{ path('owner') }}">Owners</a></li>
                      <li><a href="{{ path('type') }}">Types</a></li>
                      <li><a href="{{ path('category') }}">Categories</a></li>
                    </ul>
                  </li>
                </ul>
                <form class="navbar-search">
                  <input id="search" type="text" class="search-query" placeholder="Search" autocomplete="off">
                </form>
              </div><!--/.nav-collapse -->
            </div>
          </div>
        </div>

        <div class="container-fluid">
          {% block content %}{% endblock %}

          <hr>

          <footer>
            <p>&copy; Arctic Solutions 2012</p>
          </footer>

        </div><!--/.fluid-container-->

        {% block javascripts %}
        <script src="{{ asset('js/vendor/jquery-1.8.0.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('js/vendor/bootstrap.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('js/main.js') }}" type="text/javascript"></script>
        {% endblock %}
    </body>
</html>