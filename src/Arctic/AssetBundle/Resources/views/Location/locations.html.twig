{% extends ':Common:span8nonav.html.twig' %}

{% block mainSpan %}
    <h1>Location list</h1>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('location_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.latitude }}</td>
                <td>{{ entity.longitude }}</td>
                <td>{{ entity.description }}</td>
                <td>
                    <a href="{{ path('location_show', { 'id': entity.id }) }}"><i class="icon-search"></i></a>
                    <a href="{{ path('location_edit', { 'id': entity.id }) }}"><i class="icon-pencil"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

<a href="{{ path('location_new') }}" class="btn btn-success">Create a new entry</a>
{% endblock %}
