{% extends ':Common:span8nonav.html.twig' %}

{% block mainSpan %}
<h1>Edit {{ entity.name }} category</h1>

<form action="{{ path('category_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a href="{{ path('category') }}" class="btn">Cancel</a>
    </div>
</form>
{% endblock %}