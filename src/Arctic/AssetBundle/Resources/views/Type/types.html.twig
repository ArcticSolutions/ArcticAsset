{% extends ':Common:span8nonav.html.twig' %}

{% block mainSpan %}
<h1>Types list</h1>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Make</th>
            <th>Model</th>
            <th>Category</th>
            <th>Created</th>
            <th>Updated</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('type_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.make }}</td>
            <td>{{ entity.model }}</td>
            <td>{{ entity.category.name }}</td>
            <td>{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{% if entity.updated %}{{ entity.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>
                <a href="{{ path('type_show', { 'id': entity.id }) }}"><i class="icon-search"></i></a>
                <a href="{{ path('type_edit', { 'id': entity.id }) }}"><i class="icon-pencil"></i></a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
<a href="{{ path('type_new') }}" class="btn btn-success">Create a new entry</a>
{% endblock %}