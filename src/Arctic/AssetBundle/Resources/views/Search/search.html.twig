{% extends '::base.html.twig' %}

{% block content %}
<div class="row-fluid">
	<div class="span9">
		{% for type, flashMessages in app.session.flashbag.all() %}
	        {% for flashMessage in flashMessages %}
	            <div class="alert alert-{{ type }}">
	            	<button type="button" class="close" data-dismiss="alert">Ã—</button>
	            	{{ flashMessage }}
	            </div>
	        {% endfor %}
	    {% endfor %}
	    <section class="whiteBackground greyBorder roundedCorners">
	    	<h2 class="center">Search results</h2>
			<table class="table table-hover">
				<thead>
					<tr>
						<th>#</th>
						<th>Users name</th>
						<th>Serialnumber</th>
						<th>Type</th>
						<th>Manufacturer</th>
						<th>Model</th>
						<th>Action</th>
					</tr>
				</thead>
				<tbody>
					{% if assets|length == 0 %}
						<tr>
							<td colspan="8" class="center">No results found</td>
						</tr>
					{% endif %}
					{% for asset in assets %}
					    <tr>
					    	<td>{{ asset.id }}</td>
					    	<td>{{ asset.name }}</td>
					    	<td>{{ asset.serialnumber }}</td>
					    	<td>{{ asset.category }}</td>
					    	<td>{{ asset.make }}</td>
					    	<td>{{ asset.model }}</td>
							<td>
								<a href="{{ path('asset_show', { 'id': asset.id }) }}"><i class="icon-search"></i></a>
								<a href="{{ path('asset_edit', { 'id': asset.id }) }}"><i class="icon-pencil"></i></a>
							</td>
					    </tr>
					{% endfor %}
				</tbody>
			</table>
		</section>
	</div>
	<!--/span-->
</div>
<!--/row-->
{% endblock %}