{% extends 'ArcticUserBundle::userbase.html.twig' %}

{% block content %}
<div class="row">
  <div class="whiteBackground greyBorder roundedCorners">
    <form class="form-horizontal" action="{{ path("fos_user_security_check") }}" method="post">
    	<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
      <legend><span class="padding15px">Login</span></legend>
      {% if error %}<div class="alert alert-error">{{ error|trans({}, 'FOSUserBundle') }}</div>{% endif %}
      <div class="control-group">
        <label class="control-label" for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
        <div class="controls">
          <input type="text" id="username" name="_username" value="{{ last_username }}" autofocus required>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
        <div class="controls">
          <input type="password" id="password" name="_password" required>
        </div>
      </div>
      <div class="control-group">
        <div class="controls">
          <label class="checkbox">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on"> {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
          </label>
          <button type="submit" name="_submit" class="btn btn-primary">{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}</button>
        </div>
      </div>
    </form>
  </div>
</div>
{% endblock %}
