<div class="row-fluid">
	<div class="span3">
		<div class="well well-small whiteBackground usercard clearfix">
			<h5>{{ app.user.name }}</h5>
		</div>
		<ul class="nav nav-tabs nav-stacked whiteBackground">
			<li>
				<a href="{{ path('fos_user_profile_edit') }}">Account</a>
			</li>
			<li  class="active">
				<a href="{{ path('fos_user_change_password') }}">Password</a>
			</li>
		</ul>
	</div>
	<div class="span9 whiteBackground greyBorder roundedCorners padding15px">
		{% for type, flashMessages in app.session.flashbag.all() %}
	        {% for flashMessage in flashMessages %}
	            <div class="alert {% if type == 'fos_user_success' %}alert-success{% endif %}">
	            	<button type="button" class="close" data-dismiss="alert">Ã—</button>
	            	{{ flashMessage|trans({}, 'FOSUserBundle') }}
	            </div>
	        {% endfor %}
	    {% endfor %}
		<form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="post" class="form-horizontal">
			<legend>Password</legend>
			{{ form_widget(form) }}
			<div class="control-group">
				<div class="controls">
					<button type="submit" class="btn btn-primary">{{ 'change_password.submit'|trans({}, 'FOSUserBundle') }}</button>
				</div>
			</div>
		</form>
	</div>
</div>