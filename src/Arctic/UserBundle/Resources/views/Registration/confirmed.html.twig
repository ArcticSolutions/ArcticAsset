{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
<div class="row-fluid">
	<div class="span4 whiteBackground greyBorder roundedCorners padding15px">
		<h3>{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}</h3>
		<p>
			{{ 'registration.confirmed'|trans({'%username%': user.name}, 'FOSUserBundle') }}
		</p>
		{% if app.session is not empty %}
	        {% set targetUrl = app.session.get('_security.target_path') %}
	        {% if targetUrl is not empty %}
				<p>
					<a href="{{ targetUrl }}">{{ 'registration.back'|trans({}, 'FOSUserBundle') }}</a>
				</p>
			{% endif %}
	    {% endif %}
	</div>
	<!--/span-->
</div>
<!--/row-->
{% endblock fos_user_content %}