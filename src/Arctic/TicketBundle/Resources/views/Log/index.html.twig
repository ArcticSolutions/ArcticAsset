<h1>Log list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Created</th>
            <th>User</th>
            <th>Statement</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('log_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{{ entity.user }}</td>
            <td>{{ entity.statement }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('log_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('log_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('log_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
